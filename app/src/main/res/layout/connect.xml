<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:padding="@dimen/layout_padding_15">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/deviceConnect"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/text_size_20" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimary" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/layout_marginTop_20"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/connect_type"
            android:textSize="@dimen/text_size_20" />

        <Spinner
            android:id="@+id/connect_type"
            android:layout_width="@dimen/layout_width250"
            android:layout_height="wrap_content"
            android:background="@drawable/spinner_border"
            android:entries="@array/connect"
            android:textAlignment="center"
            android:textSize="@dimen/text_size_20"
            android:theme="@style/connectSpinnerStyle" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/layout_marginTop_20"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/tcp_param"
            android:textSize="@dimen/text_size_20" />

        <Spinner
            android:id="@+id/rs232_android_port"
            android:layout_width="@dimen/layout_width_125"
            android:layout_height="wrap_content"
            android:background="@drawable/spinner_border"
            android:textAlignment="center"
            android:textSize="@dimen/text_size_20"
            android:theme="@style/connectSpinnerStyle" />

        <Spinner
            android:id="@+id/rs232_android_baud"
            android:layout_width="@dimen/layout_width_125"
            android:layout_height="wrap_content"
            android:background="@drawable/spinner_border"
            android:entries="@array/baud"
            android:textAlignment="center"
            android:textSize="@dimen/text_size_20"
            android:theme="@style/connectSpinnerStyle" />

    </LinearLayout>


</LinearLayout>
