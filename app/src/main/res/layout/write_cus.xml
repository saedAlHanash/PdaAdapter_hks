<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cus_linear"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:padding="@dimen/layout_padding_15">

    <TextView
        android:id="@+id/cus_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/cCus"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/text_size_26" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimary" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/matchingParam"
        android:textSize="@dimen/text_size_20" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/cus_6c_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/cus_mode"
            android:visibility="visible"
            android:textSize="@dimen/text_size_20" />

        <!--<Spinner-->
            <!--android:id="@+id/cus_gb_mode"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:entries="@array/cus_gb_mode"-->
            <!--android:visibility="visible"-->
            <!--android:textSize="@dimen/text_size_20" />-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cusStart"
            android:textSize="@dimen/text_size_20" />

        <EditText
            android:id="@+id/cus_start"
            android:layout_width="@dimen/layout_width_300"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="@dimen/text_size_20" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cusEpc"
            android:textSize="@dimen/text_size_20" />

        <EditText
            android:id="@+id/cus_epc"
            android:layout_width="@dimen/layout_width_300"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_20" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cusTid"
            android:textSize="@dimen/text_size_20" />

        <EditText
            android:id="@+id/cus_tid"
            android:layout_width="@dimen/layout_width_300"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_20" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cusPas"
            android:textSize="@dimen/text_size_20" />

        <EditText
            android:id="@+id/cus_pas"
            android:layout_width="@dimen/layout_width_300"
            android:layout_height="wrap_content"
            android:hint="00000000"
            android:textSize="@dimen/text_size_20" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cusUser"
        android:textAlignment="center"
        android:textSize="@dimen/text_size_20" />

    <EditText
        android:id="@+id/cus_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        android:background="@drawable/text_area" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@color/colorPrimary" />

    <android.support.design.widget.TabLayout
        android:id="@+id/tab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:tabGravity="center"
        app:tabTextAppearance="@style/MyTabLayoutTextAppearanceInverse"></android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="220dp"></android.support.v4.view.ViewPager>


</LinearLayout>
