<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg"
    android:backgroundTintMode="screen"
    android:gravity="center"
    android:layoutDirection="ltr"
    android:orientation="vertical"
    tools:context=".EntryActivity">

    <TextView
        android:id="@+id/version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_version"
        android:textAlignment="center"
        android:textColor="@color/DodgerBlue"
        android:textSize="@dimen/text_size_23" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/readOrWrite"
            android:layout_width="@dimen/layout_width_300"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/button_selector"
            android:text="@string/readCard"
            android:textAllCaps="false"
            android:textSize="@dimen/text_size_20" />

        <Button
            android:id="@+id/rfidConfig"
            android:layout_width="@dimen/layout_width_300"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/layout_marginTop_20"
            android:background="@drawable/button_selector"
            android:text="@string/rfid"
            android:textAllCaps="false"
            android:textSize="@dimen/text_size_20" />

        <Button
            android:id="@+id/upgradeBaseband"
            android:layout_width="@dimen/layout_width_300"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/layout_marginTop_20"
            android:background="@drawable/button_selector"
            android:text="@string/upgradeBase"
            android:textAllCaps="false"
            android:textSize="@dimen/text_size_20" />

        <Button
            android:id="@+id/deviceInfo"
            android:layout_width="@dimen/layout_width_300"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/layout_marginTop_20"
            android:background="@drawable/button_selector"
            android:text="@string/deviceInfo"
            android:textAllCaps="false"
            android:textSize="@dimen/text_size_20" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/layout_marginTop_20"
            android:orientation="horizontal"
            android:visibility="invisible">

            <Button
                android:id="@+id/chinese"
                android:layout_width="@dimen/layout_width_150"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/button_style"
                android:text="@string/arabic"
                android:textAllCaps="false"
                android:textSize="@dimen/text_size_20" />

            <Button
                android:id="@+id/english"
                android:layout_width="@dimen/layout_width_150"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/button_style"
                android:text="@string/english"
                android:textAllCaps="false"
                android:textSize="@dimen/text_size_20" />

        </LinearLayout>

        <!--        <LinearLayout-->
